<div class="jumbotron bg-danger text-center"></div>
<h1>Eat Burgers!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Add a burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="devoured">do you want to eat it now?</label>
          <input type="radio" name="devoured" value="0" checked> Not eaten<br>
          <input type="radio" name="devoured" value="1"> eaten!
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>




<div class="row">
  <div class="col-md-6">
    <h3>Burgers Ready to Eat</h3>


    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{!-- <p>ID: {{id}}</p>
      <p>Burger: {{burger}}</p> --}}
      {{!-- <button data-id="{{this.id}}" class="delquote">Consume!</button> --}}
      {{!-- {{> cats/cat-block devoured=true}} --}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <h3>Burgers Consumed</h3>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>

  </div>
</div>